<p style="color: green"><%= notice %></p>

<h1>Groups</h1>

<%# <%= link_to "New group", new_password_path %>
<div class="container bg-dark text-light rounded-top px-4 pb-2 mb-4">
  <div class="container d-flex gap-5">
    <h1>Welcome <%= current_user.name %><span>&#x1F937;</span></h1>
    <div class="ms-auto m-1">
      <%= button_to "Add new category", new_user_group_path(current_user), method: :get, class: "btn btn-warning mt-10 mb-10 text-end m-3 me-auto order-last" %>
    </div>
  </div>
  <h6 class="m-3">Here is a list of your expences <span>&#x1F4B0;&#x1F4B6;</span></h6><br>
  
  <% @groups.each do |group|%>
  <div class='shadow-lg p-3 mb-5 bg-body-tertiary rounded bg-danger d-flex'>
    <div class='card-body'>
      <h3 class="card-title text-decoration-none m-3 text-dark"><%= group.name %></h3> 
      <%# <%= image_tag group.icon %> %>
    </div>
    <div class="card-body m-2 w-50">
      <p class="text-dark"  style="overflow-wrap: break-word;"><%= group.icon %><p>
    </div>
  </div>
  <% end %>
</div>